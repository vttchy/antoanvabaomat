{
  "env": {
  "es2021": true,
  "node": true,
  "browser": true
},

  "extends": ["eslint:recommended", "plugin:import/recommended"],
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "import/no-unresolved": "error"
  }
}
